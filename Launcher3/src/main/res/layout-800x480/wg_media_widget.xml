<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/wg_music"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/media_id3img"
            android:layout_width="96px"
            android:layout_height="96px"
            android:scaleType="fitCenter"
            android:src="@drawable/mediainfo_music_default" />

        <LinearLayout
            android:layout_width="218px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/media_music_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#FFF"
                android:textSize="18px" />

            <ProgressBar
                android:id="@+id/media_music_progressbar"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="15px" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/media_music_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textColor="#FFF"
                    android:textSize="14px" />

                <TextView
                    android:id="@+id/media_music_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="#FFF"
                    android:textSize="14px" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:paddingTop="15px"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left">

                    <ImageView
                        android:id="@+id/wg_music_prev"
                        android:layout_width="32px"
                        android:layout_height="29px"
                        android:src="@drawable/media_prev" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/wg_music_play"
                        android:layout_width="32px"
                        android:layout_height="29px"
                        android:src="@drawable/media_play"
                        android:visibility="visible"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">

                    <ImageView
                        android:id="@+id/wg_music_next"
                        android:layout_width="32px"
                        android:layout_height="29px"
                        android:src="@drawable/media_next" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wg_radio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="96px"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/media_radio" />

        <LinearLayout
            android:layout_width="218px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7px"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="78px">

                <TextView
                    android:id="@+id/wg_fm_tv01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="#FFF"
                    android:textSize="17px" />

                <TextView
                    android:id="@+id/wg_fm_tv02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="17px"
                    android:textColor="#FFF"
                    android:textSize="50px" />

                <TextView
                    android:id="@+id/wg_fm_tv03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textColor="#FFF"
                    android:textSize="17px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="horizontal"
                android:paddingTop="15px"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start">

                    <ImageView
                        android:id="@+id/wg_fm_prev"
                        android:layout_width="32px"
                        android:layout_height="29px"
                        android:src="@drawable/media_prev" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <ImageView
                        android:id="@+id/wg_fm_next"
                        android:layout_width="32px"
                        android:layout_height="29px"
                        android:src="@drawable/media_next" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
